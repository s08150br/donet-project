@model NotreDameHumber_Website.Models.Parking1
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Parking payment</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label for="item_name">Your mame</label>
                @Html.TextBoxFor(x => x.item_name, new { @class = "form-control", placeholder = "item_name" })
                @Html.ValidationMessageFor(x => x.item_name)
            </div>

            <div class="form-group">
                <label for="item_number">Cars number</label>
                @Html.TextBoxFor(x => x.item_number, new { @class = "form-control", placeholder = "item_number" })
                @Html.ValidationMessageFor(x => x.item_number)
            </div>

            <div class="form-group">
                <label for="amount">price:$4/Hours</label>
                @Html.HiddenFor(x => x.amount, new { @Value = 4, @class = "form-control", placeholder = "price" })
                @Html.ValidationMessageFor(x => x.amount )
                <script>
                   
                </script>
            </div>

            <div class="form-group">
                <label for="quantity">How many hours you want to stay?</label>
                @Html.TextBoxFor(x => x.quantity, new { @class = "form-control", placeholder = "number" })
                @Html.ValidationMessageFor(x => x.quantity)
            </div>
            <div class="form-group">
                <label for="hours">Select area:</label>
                @Html.DropDownListFor(x => x.hours, new List<SelectListItem>
           {
               new SelectListItem() {Text= "A", Value="1"},
               new SelectListItem() {Text= "B", Value="2"}
           })
            </div>

            <button type="submit" class="btn btn-success">Pay here</button>
        }
    </div>
    <div class="col-md-12">
        @Html.ActionLink("Pay here", "Index", new { controller = "Paypal1" }, new { @class = "btn btn-primary" })
    </div>
</body>
</html>
