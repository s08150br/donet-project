@model IEnumerable<BlogTemp.Models.Comment>

@{
    ViewBag.Title = "Comments";
}

<div class="row">
    <div class="container">
        <div class="col-md-6">
            <h2>Comments</h2>
        </div>
        <div class="col-md-6">
            <h2>@Html.ActionLink("Blogs", "Admin")</h2>
        </div>
    </div>
</div>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publish)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Associated blog
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publish)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Blog.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "SingleComment", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "RemoveComment", new { id=item.Id })
        </td>
    </tr>
}

</table>
