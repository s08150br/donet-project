@model IEnumerable<BlogTemp.Models.Blog>

@{
    ViewBag.Title = "Index";
}
<p>
    @if (Session["admin"] != null)
    {
        @Html.ActionLink("Logout", "Logout")
    }
</p>

<h2>NDH Blog</h2>


@foreach (var item in Model) {
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h3>@Html.DisplayFor(modeltem => item.Title)</h3>
                </div>
                <div class="col-md-3">
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>@Html.DisplayFor(modelItem => item.Subject)</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.DisplayFor(modelItem => item.Image)
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.DisplayFor(modelitem => item.Body)
                </div>
            </div>
            <br />
            <div class="row">
                    @Html.ActionLink("Comments", "Details", new { id = item.Id })
            </div>
        </div>
    </div>
    <hr />

}

<p>
    @Html.ActionLink("Admin", "Login")
</p>
