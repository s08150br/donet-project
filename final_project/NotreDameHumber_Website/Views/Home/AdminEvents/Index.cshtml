@model IEnumerable<NotreDameHumber_Website.Controllers.AdminEvent>

@{
    ViewBag.Title = "AdminEvents";
   Layout = "~/Views/Home/EventCalendar.cshtml";
}
    
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="row col-md-1">
    <tr>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.ContactEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.EventWebsite)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventWebsite)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EventId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EventId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EventId })
        </td>
    </tr>
}

</table>
