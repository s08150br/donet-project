@model NotreDameHumber_Website.Controllers.tblFAQ

@{
    ViewBag.Title = "Faq_create_user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ask a question</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>You can ask a question here</h4>
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@


        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Category", new List<SelectListItem> {
               new SelectListItem {Text="General", Value="General" },
               new SelectListItem {Text="Insurnce", Value="Insurnce" },
               new SelectListItem {Text="Donation", Value="Donation" },
               new SelectListItem {Text="Services", Value="Services" }
           })
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Question", new { cols = 60, rows = 10, @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("List of questions", "Faq_list_user")
</div>
